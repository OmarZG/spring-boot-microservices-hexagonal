						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{moderator_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"price\": 1199.99,\n  \"stock\": 45\n}"
						},
						"url": {
							"raw": "{{product_url}}/api/products/{{product_id}}",
							"host": ["{{product_url}}"],
							"path": ["api", "products", "{{product_id}}"]
						}
					}
				},
				{
